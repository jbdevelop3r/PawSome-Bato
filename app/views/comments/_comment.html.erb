<section style="">
    <div class="comment-box ml-1">
      <p style="margin: 5px" >
      <div class="col-1">
          <%= image_tag 'default_profile', class: 'rounded-circle', style: 'width: 50px; height: 50px;' %>        
      </div>
      <%= comment.name %>
      <%= comment.comment %>
      </p>  

      <% if current_user.email == comment.name %>
      <%= link_to [comment.post, comment],
                method: :delete, class: "delete-comment", data: { confirm: 'Are you sure?' } do %>
                <p style="margin: 5px">
                    <i class="fa-solid fa-trash"></i>
                </p>
      <% end %>
    <% end %>
    </div>
</section>


