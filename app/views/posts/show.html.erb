<%= link_to "Homepage", posts_path %>

<div class="d-flex justify-content-center gap-2">
        <div class="card post-card" style="width: 30rem; max-height: 600px;">
            <div  class="card-img-top mb-5 mt-3" >
                    <%= image_tag @post.thumbnail_url, class: "pet-thumbnail"%>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center gap-2">
                    <h1 class="card-title"><%= @post.pet_name.titleize  %></h1>
                    <% if current_user.id == @post.user_id %>
                        <%= link_to "Edit Post", edit_post_url %>
                    <% end %>
                </div>

                <%= button_to "Report", "#", class: "btn btn-danger", id: "report-button", data: { toggle: "modal", target: "#report-modal" } %>

                <div class="modal fade" id="report-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirm Report</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to report this post?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
                
                <h5 class="card-text"><strong><%= @post.advertisement %></strong></h5>
                <p class="card-text"><strong>Category:</strong> <%= @post.category.titleize %></p>
                <p class="card-text"><strong>Breed:</strong> <%= @post.breed.titleize %></p>
                <p class="card-text"><strong>Price:</strong> <%= number_to_currency(@post.price, unit: "â‚±", separator: ".", delimiter: ",") %></p>
                <p class="card-text"><strong>Description:</strong></p>
                <p class="card-text"><%= @post.description %></p>
                <p class="card-text"><strong>Location:</strong></p>
                <p class="card-text"><%= @post.location %></p>
                <p class="card-text"><strong>Pick up/Meet up:</strong> <%= @post.pick_up == 'meet_up' ? 'Meet up' : 'Pick up' %></p>
            </div>
        </div>

        <div class="card post-card" style="width: 30rem;">
            <%= render 'comments/form' %>
            <h5><strong><%= @post.comments.count %></strong> Comments:</h5>
            <%= render @post.comments %>
        </div>
</div>