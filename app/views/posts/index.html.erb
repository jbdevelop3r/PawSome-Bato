<%= link_to 'Post a pet', new_post_path %>

<h1>Pets for adoption</h1>

<div class="container">
    <% @posts.each do |post| %>
        <div class="post">
            <%= link_to post do %>
                <div class="ctr-thumb">
                    <%= image_tag post.thumbnail_url, class: "thumb" %>
                </div>
                <h3><%= post.pet_name %></h3>
                <h4><%= post.category %>, <%= post.breed %></h4>
                <p><%= number_to_currency(post.price) %></p>
                <p><%= post.description %></p>
                <p><%= post.location %>, <%= post.is_meet_up ? 'Meet up' : 'Pick up' %></p>
            <% end %>
        </div>
    <% end %>
</div>
